<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    >
    
    <RelativeLayout
        android:id="@+id/record_save_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@mipmap/title_bg"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:id="@+id/record_save_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/back_image"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="语音护理"
            android:textColor="@color/comm_black"
            android:textSize="20sp"
            />


        <LinearLayout
            android:id="@+id/record_save_sure"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定"
                android:textColor="#00cccb"
                />

        </LinearLayout>
    </RelativeLayout>

    <!--顶部语音效果栏-->
    <LinearLayout
        android:id="@+id/ll_top_voice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_top_voice_time"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="0:00"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/line_top_voice_seperator"/>

        <!-- 顶部语音动画 -->
        <com.iflytek.medicalsdk_nursing.util.MiniWaveSurface
            android:id="@+id/mws_speech"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/record_save_type_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="@color/green"
        android:layout_below="@+id/record_save_title_layout"
        >

        <TextView
            android:id="@+id/record_save_type_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/white"
            android:text="2017-01-09 15:00:00"
            />


        <TextView
            android:id="@+id/record_save_type_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:text="体温单"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/record_save_setting_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="批量设置"
            android:textColor="@color/white"
            android:background="@drawable/bg_full_white_line"
            android:padding="5dp"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/record_divider_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/record_save_type_layout"
        android:background="@mipmap/list_divider"
        />

    <ExpandableListView
        android:id="@+id/record_save_expandableListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@mipmap/list_divider"
        android:background="#ffffff"
        android:cacheColorHint="#00000000"
        android:listSelector="#00000000"
        android:groupIndicator="@null"
        android:layout_below="@+id/record_divider_image"
        ></ExpandableListView>

</RelativeLayout>