<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <!-- 提示是否是最新版本 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/custom_dialog_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/comm_gray"
            android:gravity="center"
            android:background="@mipmap/dialog_title_bg"
            android:lineSpacingMultiplier="1.3"
            android:text="选择需要同步的表单"
            android:textSize="17sp"
            android:padding="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/comm_thi_gray"
            ></View>

    </LinearLayout>


    <!-- 是最新版本，只有确定 -->

    <ListView
        android:id="@+id/custom_dialog_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="0.5dp"
        android:layout_weight="1"
        >

    </ListView>

    <!-- 不是最新版本，待做 -->

    <LinearLayout
        android:id="@+id/custom_dialog_double"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/custom_dialog_double_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_left_selector"
            android:gravity="center"
            android:textColor="@color/versioncheck_cancle_textcolor"
            android:text="取消"
             />

        <TextView
            android:id="@+id/custom_dialog_double_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_right_selector"
            android:gravity="center"
            android:textColor="@color/versioncheck_sure_textcolor"
            android:text="保存"
             />
    </LinearLayout>

</LinearLayout>